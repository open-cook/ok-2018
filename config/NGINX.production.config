upstream open-cook.ru {
  server unix:/home/rails/open-cook.ru/tmp/sockets/puma.sock fail_timeout=15;
}

# REDIRECT: Any subdomain to main domain
#
server {
    listen 80;
    listen 443 ssl;

    ssl_certificate     /home/rails/open-cook.ru/open-cook.ru.ssl-bundle.crt;
    ssl_certificate_key /home/rails/open-cook.ru/open-cook.ru.key;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers  "HIGH:!RC4:!aNULL:!MD5:!kEDH";

    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;

    ssl_stapling on;
    ssl_stapling_verify on;
    add_header Strict-Transport-Security max-age=15768000;
  
    server_name *.open-cook.ru;

    access_log /home/rails/open-cook.ru/log/open-cook.ru.nginx.log;
    error_log  /home/rails/open-cook.ru/log/open-cook.ru.nginx.errors.log;

    rewrite ^ http://open-cook.ru$uri permanent;
}

server{
    listen 80 default_server;
    server_name open-cook.ru;

    if ($ssl_protocol = "") {
      rewrite ^ https://open-cook.ru$uri permanent;
    }

    listen 443 ssl;

    ssl_certificate     /home/rails/open-cook.ru/open-cook.ru.ssl-bundle.crt;
    ssl_certificate_key /home/rails/open-cook.ru/open-cook.ru.key;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers  "HIGH:!RC4:!aNULL:!MD5:!kEDH";

    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;

    ssl_stapling on;
    ssl_stapling_verify on;
    add_header Strict-Transport-Security max-age=15768000;
  

  deny 5.18.83.52;
  deny 91.242.33.8;

  ### ~  case sensitive   http user agent blocking  ###
  ### ~* case insensitive http user agent blocking  ###
  if ($http_user_agent ~* (MegaIndex|AcoiRobot|majestic12) ) {
    return 403;
  }

  # Logs
  access_log /home/rails/open-cook.ru/log/open-cook.ru.nginx.log;
  error_log  /home/rails/open-cook.ru/log/open-cook.ru.nginx.errors.log;

  # etag off;

  charset utf-8;
  proxy_intercept_errors on;

  root /home/rails/open-cook.ru/public;
  client_max_body_size 256m;

  error_page 502 503 504 /maintenance.html;

  # /system/maintenance/index.html

  location ~ ^/(assets|uploads|special_posts|images|system|default_images)/ {
    expires max;
    gzip_static on;
    add_header Cache-Control public;
  }

  location / {
    try_files $uri @web_site;
  }

  location @web_site {
    proxy_pass http://open-cook.ru;

    proxy_redirect off;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_read_timeout 300;
    proxy_buffer_size 16k;
    proxy_buffers 32 16k;

    proxy_set_header X-Forwarded-Proto $scheme;
  }

  # WebSocket configure
  location /app-cable {
    proxy_pass http://open-cook.ru;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }

  location ~ /\.git {
    deny all;
  }

  location ~ /\.ht {
    deny all;
  }

  location ~ /\.svn {
    deny all;
  }

  location ^~ /awstatsicons/ {
    alias /var/www/awstats/icon/;
  }
}
