- cache(:sitemap, expires_in: 6.hours ) do
  <?xml version="1.0" encoding="UTF-8"?>
  %urlset{ :xmlns => "http://www.sitemaps.org/schemas/sitemap/0.9" }
    - @posts.each do |post|
      %url
        %loc= polymorphic_url post
        %lastmod= post.updated_at.to_time.iso8601
        %changefreq weekly
        %priority 0.9
